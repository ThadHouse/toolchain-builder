#!/bin/zsh

mkdir gdb-build
mkdir gdb-install
cd gdb-build
../gdb-${V_GDB}/configure --target=arm-frc2019-linux-gnueabi --prefix=/opt/frc2019 --with-pkgversion='GDB for FRC' --disable-nls --with-libexpat --datadir=/usr/local/share/frc --with-system-gdbinit=/usr/local/share/frc/gdb/gdbinit --with-sysroot=/usr/local/frc/arm-frc2019-linux-gnueabi/ --enable-lto|| exit $?
make|| exit $?
DESTDIR=$PWD/../gdb-install make install|| exit $?
cd ../gdb-install
cp ../../deb/debians/gdb/gdbinit usr/local/share/frc/gdb/gdbinit

